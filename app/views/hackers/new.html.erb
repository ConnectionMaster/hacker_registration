<div class="col-md-6 col-md-offset-3 hacker-new">
  <h1 class="head">GE @ MHACKS</h1>

  <%= form_tag do |f| %>

    <div class="form-group row">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-2x fa-user"></i>
        </span>
        <%= text_field_tag 'name', nil, :class => 'form-control', :placeholder => 'Name' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-2x fa-github"></i>
        </span>
        <%= text_field_tag 'github_id', nil, :class => 'form-control', :placeholder => 'Your GitHub username' %>
      </div>
    </div>

    <button type="submit" class="btn btn-lg btn-success">Submit Profile</button>

  <% end %>
</div>
